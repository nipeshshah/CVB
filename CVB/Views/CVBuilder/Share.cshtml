        <script>
            function ShowTab(obj, tabId) {
                debugger;
                $('#tabspane').find('a').removeClass('active');
                $(obj).addClass('active');
                $('#ex1-content').find('div' ).hide();
                $('#ex1-content').find('#' + tabId).show();
            }
        </script>
        <div id="tabspane" class="tab-class text-center wow fadeInUp">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" for="tab1" onclick="ShowTab(this, 'tab1')" data-toggle="tab" aria-current="page" href="#tab1">Send To Company</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" for="tab2" onclick="ShowTab(this, 'tab2')" data-toggle="tab" href="#tab2">Change Visibility</a>
                </li>
                @*<li class="nav-item">
                    <a class="nav-link" for="tab3" onclick="ShowTab(this, 'tab3')" data-toggle="tab" href="#tab3">Generate PDF</a>
                </li>*@
