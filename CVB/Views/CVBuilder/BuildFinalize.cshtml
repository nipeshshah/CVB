
@{
    ViewBag.Title = "Build Finalize";
    Layout = "~/Views/Shared/_LayoutCopy.cshtml";
}
<script>
    function changeIcon(obj) {
        debugger;
        $(obj).addClass('fa-check').removeClass('fa-times');
    }
</script>
<div class="mt-2 mb-2">
    <div class="row">
        <div class="col-md-12 col-lg-6" style="background-color:whitesmoke">
            <form id="myForm" action="submit.php" method="POST">
                <div class="row g-3" style="margin-left:5px">
                    <div class="col-lg-12 wow fadeIn" data-wow-delay="0.5s">
                        @*<a class="btn btn-primary py-3 px-5 mt-3" href="">Next</a>*@
                        <p>
                            <i class="fa fa-check text-primary  py-3 px-5 mt-3"></i>Selected template: <span id="templateName">Marketing</span>
                        </p>
                    </div>
                    <div class="col-lg-12 wow fadeIn" data-wow-delay="0.5s">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="title" placeholder="Title">
                            <label for="title">Title</label>
                        </div>
                    </div>
                    <div class="col-lg-12 wow fadeIn" data-wow-delay="0.5s">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="publicurl" placeholder="Public Url">
                            <label for="publicurl">Public Url</label>
                        </div>
                    </div>
                    <div class="col-lg-12 wow fadeIn" data-wow-delay="0.5s">
                        <h4 class="mb-3">Sections</h4>
                        <div class="form-check form-switch">
                            <i class="fa fa-check text-primary" style="margin-left: -2.5em"></i>
                            <input class="form-check-input d-none" type="checkbox" id="flexSwitchCheckChecked" checked readonly>
                            <label class="form-check-label" for="flexSwitchCheckChecked"> Profile Picture </label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked readonly>
                            <label class="form-check-label" for="flexSwitchCheckChecked"> Description </label>
                        </div>

                        @foreach (var item in new string[] { "Education Qualification ",
                            "Personal Information    ",
                            "Profile Picture         ",
                            "Languages               ",
                            "Experience              ",
                            "Education Qualification ",
                            "Skills                  ",
                            "Certification           ",
                            "Projects                ",
                            "Public Profiles         ",
                            "Patents                 ",
                            "Copyrights              ",
                            "Awards                  ",
                            "Hobbies                 " })
                        {
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
                                <label class="form-check-label" for="flexSwitchCheckChecked"> @item </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="d-flex justify-content-between bg-light mb-3">
                    <div class="p-2 col-example">&nbsp;</div>
                    <div class="p-2 col-example">&nbsp;</div>
                    <div class="p-2 col-example"><button type="button" onclick="generateResume()" class="btn btn-primary btn-lg m-1">Generate</button></div>
                </div>
            </form>
        </div>
        <div class="col-md-12 col-lg-6" style="background-color:antiquewhite">
            <iframe src="~/Assets/templates/document-html.pdf" style="width:100%; min-height:500px" class="ls-wide ver" onabort=""></iframe>
        </div>
    </div>

</div>