
@{
    ViewBag.Title = "Openings";
    Layout = "~/Views/Shared/_LayoutCopy.cshtml";
}


<div class="container-xxl pb-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Resumes</h1>
        <div class="row">
            <div class="text-right col-sm-8" style="text-align:left">
                Selected Resume: Resume for SharePoint Developer
                <small><i>(Last Updated: 20 Jan, 2023)</i></small>
            </div>
            <div class="text-right col-sm-4" style="text-align:right">
                <a href="/CVBuilder/build"><h5 class="card-title"><i class="fas fa-plus me-3 "></i>Create New Resume</h5></a>
            </div>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="job-item p-4 mb-4">
                        <div class="row g-4">
                            <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                @*<img class="flex-shrink-0 img-fluid border rounded" src="img/com-logo-1.jpg" alt="" style="width: 80px; height: 80px;">*@
                                <div class="text-start ps-4">
                                    <h5 class="mb-3">MSBC India Pvt. Ltd.</h5>
                                    <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>Iscon, Ahmedabad</span>
                                    <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>hr@msbcgroup.com</span>
                                    <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>HR Team</span>
                                    <a class="btn btn-link btn-rounded btn-sm fw-bold"
                                       href="https://rsbldr.com/msbcgroup/openings">Current Openings</a>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                <div class="d-flex mb-3">
                                    @*<a title="Manage" class="btn btn-light btn-square me-3"><i class="fas fa-plus m-1"></i></a>*@
                                    <a title="Information" class="btn btn-light btn-square me-3" href="/CVBUilder/Share"><i class="fas fa-info m-1"></i></a>
                                    <a title="Share" class="btn btn-light btn-square me-3" href="/CVBUilder/Share"><i class="fas fa-share m-1"></i></a>
                                </div>
                                <small class="text-truncate me-3"><i class="far fa-calendar-alt text-primary me-3"></i>Date : 20 Jan, 2023</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>